<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="wrap_content"
   android:layout_height="wrap_content"
    android:gravity="start"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    >




    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="15dp"
android:background="@drawable/ellipse"
        app:srcCompat="@drawable/user_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"

        />

    <TextView
        android:id="@+id/Profile_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:textSize="25dp"
        android:textColor="@color/white"
        tools:text="techzarinfo1"

        android:padding="1dp"
        android:layout_alignTop="@+id/img_profile"
        android:layout_alignLeft="@+id/EditProfile"
        android:layout_alignStart="@+id/EditProfile" />

    <TextView
        android:id="@+id/EditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textSize="15dp"
        android:textColor="@color/white"
        tools:text="Edit Profile"
        android:background="@drawable/button_background_new"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="10dp"
        android:padding="2dp"

        android:paddingRight="5dp"
        android:paddingBottom="5dp"

        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/Profile_name"
        android:layout_toRightOf="@+id/img_profile"
        android:layout_toEndOf="@+id/img_profile" />


</RelativeLayout>
