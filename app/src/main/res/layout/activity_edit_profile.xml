<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vertical_scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:id="@+id/activity_profile_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        >

        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/personaldetai_heading"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/greendark"
                android:text="Personal Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:background="@drawable/layout_background"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="40sp"
                android:layout_height="40sp"
                app:srcCompat="@drawable/ic_ok"
                android:id="@+id/imageView_updatePersonal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"

                tools:clickable="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"

            android:layout_height="175dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/profile_image"

                android:id="@+id/imageView11"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personaldetail"
            android:layout_below="@+id/personaldetai_heading"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                >
                <TableRow
                    android:layout_marginBottom="2dp"
                    >



                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/input_User_name"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Name" />
                </TableRow>
                <TableRow
                    android:layout_marginBottom="2dp">

                    <RadioGroup
                        android:id="@+id/radiogender1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"

                        android:orientation="horizontal"
                        android:weightSum="1"
                         android:layout_centerHorizontal="true">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:text="Male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_darker"
                            android:textColor="@color/textcolor"
                            android:textSize="15dp"



                            android:checked="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_weight="0.31" />

                        <RadioButton
                            android:buttonTint="@color/primary_darker"
                            android:textSize="15dp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:textColor="@color/textcolor"
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Female" />

                    </RadioGroup>


                </TableRow>
                <TableRow
                    android:layout_marginBottom="2dp">


                    <EditText

                        android:layout_marginTop="10dp"
                        android:id="@+id/input_dob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="D.O.B" />
                </TableRow>
            </TableLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="2dp"
            android:id="@+id/AccountDetail_heading"

            android:layout_below="@+id/personaldetail"
            android:layout_height="50dp"
            >

            <TextView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textColor="@color/greendark"
                android:text="Account Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                />

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_width="40sp"
                android:background="@drawable/border_green"
                android:layout_height="40sp"
                app:srcCompat="@drawable/ic_ok"
                android:visibility="invisible"
                android:id="@+id/imageView_updateAccount"
                android:layout_marginEnd="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


        <RelativeLayout

            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"

            android:background="@color/white"

            android:layout_height="wrap_content"
            android:id="@+id/Account_detail"
            android:layout_below="@+id/AccountDetail_heading"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                >
                <TableRow
                    android:layout_marginBottom="2dp">



                    <EditText

                        android:layout_marginTop="10dp"
                        android:id="@+id/input_mobileno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Mobile No" />


                </TableRow>
                <TableRow
                    android:layout_marginBottom="2dp">



                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="337dp"
                        android:id="@+id/input_operator"
android:visibility="gone"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Operator" />


                </TableRow>

                <TableRow
                    android:layout_marginBottom="2dp">



                    <TextView
                        android:layout_marginTop="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Select Region" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="5dp">

                    <Spinner
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:id="@+id/spinner_Region" />


                </TableRow>
                <TableRow
                    android:layout_marginBottom="2dp">



                    <RadioGroup

                        android:id="@+id/radiotype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"

                        android:orientation="horizontal"
                        android:weightSum="1"

                        android:layout_centerHorizontal="true">

                        <RadioButton
                            android:id="@+id/radio_prepaid"
                            android:text="Prepaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_darker"
                            android:textColor="@color/textcolor"
                            android:textSize="15dp"



                            android:checked="true"

                            android:layout_weight="0.31" />

                        <RadioButton
                            android:buttonTint="@color/primary_darker"
                            android:textSize="15dp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:textColor="@color/textcolor"
                            android:id="@+id/radio_postpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Postpaid" />

                    </RadioGroup>


                </TableRow>

                <TableRow
                    android:layout_marginBottom="2dp">



                    <EditText

                        android:layout_marginTop="10dp"
                        android:id="@+id/input_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:hint="Occupation" />

                </TableRow>
                <TableRow
                    android:layout_marginBottom="2dp"
                    android:padding="2dp"
                    >


                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="Current Location"
                        android:layout_gravity="center"
                        android:textColor="@color/BorderCOlor"
                        android:id="@+id/getaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="2dp">


                    <EditText
                        android:layout_marginTop="10dp"

                        android:id="@+id/input_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:hint="Address" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="2dp">



                    <EditText
                        android:layout_marginTop="10dp"

                        android:id="@+id/input_zipcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Zip Code" />

                </TableRow>
                <TableRow
                    android:layout_marginBottom="2dp">



                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/input_state"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Region" />

                </TableRow>
                <TableRow
                    android:layout_marginBottom="2dp">



                    <TextView
                        android:layout_marginTop="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Select operator" />

                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                <Spinner
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_operator" />
                </TableRow>


                <TableRow
                    android:layout_marginBottom="2dp">



                    <EditText
                        android:layout_marginTop="10dp"
                        android:text="India"
                        android:editable="false"
                        android:id="@+id/input_country"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Country" />

                </TableRow>

            </TableLayout>
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>