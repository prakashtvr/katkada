<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tooltip_nav_up"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/nav_up" />

    <RelativeLayout
        android:layout_width="395dp"
        android:background="@drawable/tooltip_bg"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tooltip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tooltip_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Tooltip using PopupWindow :)"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_recharge"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:id="@+id/imageView12"
            android:layout_below="@+id/tooltip_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_sms"
            android:layout_alignBottom="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView14"
            android:layout_toEndOf="@+id/imageView14"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:id="@+id/imageView15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_search"
            android:id="@+id/imageView14"
            android:layout_alignBottom="@+id/imageView15"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_roaming"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:id="@+id/imageView13"
            android:layout_alignTop="@+id/imageView14"
            android:layout_toRightOf="@+id/imageView12"
            android:layout_toEndOf="@+id/imageView12" />
    </RelativeLayout>


</LinearLayout>