<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">

    <TextView
        android:text="Send Your Feedback to us"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/list_divider"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:layout_centerHorizontal="true" />


    <android.support.design.widget.TextInputLayout

        android:id="@+id/input_layout_Subject"
        android:layout_width="match_parent"

        android:layout_gravity="center"
         android:padding="10dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp">

        <EditText android:id="@+id/input_subject"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:padding="5dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Subject" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/input_layout_body"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_gravity="center"

        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@+id/input_layout_Subject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <EditText android:id="@+id/input_body"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:padding="5dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Enter your Feedback" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:text="Submit"
        android:textSize="30dp"
        android:background="@drawable/button_background_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_SendFeedback"
        android:padding="5dp"
android:textColor="@color/white"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_below="@+id/input_layout_body"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

</RelativeLayout>
