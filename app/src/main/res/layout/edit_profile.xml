<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/vertical_scroll"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:id="@+id/activity_profile_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            >

            <RelativeLayout
                android:background="@color/white"
                android:id="@+id/personaldetai_heading"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/profile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:text="Personal Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"
                    />

                <ImageView
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="30sp"

                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_pencile"
                    android:id="@+id/imageView_editpersonal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"

                android:layout_height="175dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                </RelativeLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/user_image"
                    android:background="@drawable/ellipse4"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:id="@+id/imageView11"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/personaldetail"
                android:layout_below="@+id/personaldetai_heading"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*"
                    >
                    <TableRow
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_weight="0.2"
                            android:layout_marginRight="30dp"
                            android:text="Name"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            />

                        <TextView
                            android:text="Name"
                            android:layout_weight="0.2"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/tv_name"
                            />


                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_weight="0.1"
                            android:text="Gender"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            />

                        <TextView
                            android:text="-"
                            android:layout_weight="0.1"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/tv_gender"
                            />


                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:text="D.O.B"
                            android:layout_weight="0.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/textcolor"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/textView44" />

                        <TextView
                            android:text="-"
                            android:layout_weight="0.1"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/tv_dob"
                            />


                    </TableRow>
                </TableLayout>
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/white"
                android:layout_marginBottom="2dp"
                android:id="@+id/AccountDetail_heading"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/personaldetail"
                android:layout_alignLeft="@+id/personaldetail"
                android:layout_alignStart="@+id/personaldetail"
                android:layout_alignRight="@+id/personaldetail"
                android:layout_alignEnd="@+id/personaldetail">

                <TextView
                    android:text="Account Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"
                    />

                <ImageView
                    android:layout_marginRight="14dp"
                    android:layout_width="30sp"
                    android:background="@drawable/ripple_effect"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_pencile"
                    android:id="@+id/imageView_editAccount"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="14dp" />


            </RelativeLayout>


            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/Account_detail"
                android:layout_below="@+id/AccountDetail_heading"
                android:layout_alignLeft="@+id/AccountDetail_heading"
                android:layout_alignStart="@+id/AccountDetail_heading">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="2"
                    >
                    <TableRow
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_weight="0.1"
                            android:text="Mobile No"
                            android:layout_marginRight="30dp"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/textView41" />

                        <TextView
                            android:text="Mobile No"
                            android:layout_weight="0.2"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/tv_mobileno"
                            />


                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_weight="0.1"
                            android:text="Operator"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/textView43" />

                        <TextView
                            android:text="-"
                            android:layout_weight="0.2"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/tv_operator"
                            />


                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_weight="0.1"
                            android:text="Connection Type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/textcolor"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/textView40" />

                        <TextView
                            android:text="-"
                            android:layout_weight="0.2"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/tv_connection_type"
                            />


                    </TableRow>
                    <TableRow
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_weight="0.1"
                            android:text="Region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/textcolor"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            />

                        <TextView
                            android:text="-"
                            android:layout_weight="0.2"
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="14dp"
                            android:id="@+id/tv_region"
                            />


                    </TableRow>

                </TableLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
