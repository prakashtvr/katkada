<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_postpaid_bill_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.katkada.Activity.PostpaidBillForm">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="APPLICATION FORM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView67"
            android:textSize="20sp"
            android:textColor="@color/holo_blue_dark" />

        <TextView
            android:text="Plan Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/textView71"
            android:layout_below="@+id/textView67"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView72"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textView73" />

        <TextView
            android:text="Plan Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView74"
            android:textColor="@color/holo_blue_dark"
            android:layout_below="@+id/textView71" />

        <TextView
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView73"
            android:layout_alignLeft="@+id/textView73"
            android:textColor="@color/holo_blue_dark"
            android:layout_alignStart="@+id/textView73"
            android:id="@+id/textView76" />

        <TextView
            android:text="Validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView72"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textView74" />

        <TextView
            android:text="Validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView75"
            android:layout_below="@+id/textView72"
            android:textColor="@color/holo_blue_dark"
            android:layout_alignLeft="@+id/textView72"
            android:layout_alignStart="@+id/textView72" />


        <android.support.design.widget.TextInputLayout

            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:id="@+id/input_layout_name1"
            android:layout_width="match_parent"
            android:layout_gravity="center"
android:paddingTop="@dimen/activity_horizontal_margin"
            android:layout_height="70dp"
            android:weightSum="1"
            android:layout_below="@+id/textView74"
            android:layout_centerHorizontal="true"
           >
            <EditText android:id="@+id/input_name"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:hint="Name"
                android:typeface="sans"
                android:lineSpacingExtra="24sp"
                android:ellipsize="start"
                android:freezesText="false" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/input_layout_name2"
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/input_layout_name1"
            android:layout_centerHorizontal="true">
            <EditText android:id="@+id/input_email"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Email"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/input_layout_name3"
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/input_layout_name2"
            android:layout_centerHorizontal="true">
            <EditText android:id="@+id/input_mobileno"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Mobile no"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/input_layout_name4"
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/input_layout_name3"
            android:layout_centerHorizontal="true">
            <EditText android:id="@+id/input_alter_mobile"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Alternate Mobile no"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/input_layout_name5"
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/input_layout_name4"
            android:layout_centerHorizontal="true">
            <EditText android:id="@+id/input_address"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="6"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Address"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/input_layout_name6"
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/input_layout_name5"
            android:layout_centerHorizontal="true">



            <EditText android:id="@+id/input_pincode"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Pincode"
                />
        </android.support.design.widget.TextInputLayout>


        <RadioGroup
            android:id="@+id/radiogender1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/input_layout_name6"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/radio_male"
                android:text="New Connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary_darker"

                android:textSize="10dp"


                android:checked="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="0.21" />

            <RadioButton
                android:buttonTint="@color/primary_darker"
                android:textSize="10dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"

                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Mobile Number Portability (MNP)" />

        </RadioGroup>
        <CheckBox
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="10dp"
            android:text="I/We allow telecom agencies to call you and fullfill the services and does not comply for DND."
            android:layout_below="@+id/radiogender1"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"

            android:layout_weight="1" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/checkBox2"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_ClearAll"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:padding="12dp"
                android:text="CLEAR ALL"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
              />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"

                android:padding="12dp"
                android:text="SUBMIT"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
               />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>

</RelativeLayout>
